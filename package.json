{
	"name": "anker",
	"version": "1.0.0",
	"description": "Anker â€” spaced repetition flashcards plugin for Obsidian with advanced scheduling algorithms",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"typecheck": "tsc -noEmit",
		"build": "tsc -p tsconfig.build.json -noEmit && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint .",
		"format": "prettier --write .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:e2e:latest": "npm run build && OBSIDIAN_VERSIONS=latest/latest wdio run ./wdio.conf.mts",
		"test:e2e:beta": "npm run build && sh -c 'export $(grep -v \"^#\" .env | xargs) && wdio run ./wdio.conf.mts'",
		"prepare": "husky install"
	},
	"keywords": [],
